<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evidenziatore.numeriprimi.NumeriPrimiController">
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
  </padding>
   <children>
      <Label styleClass="bigBoldLabel" text="Benvenuto nel miglior programma per la scomposizione in fattori primi!" />
      <Label styleClass="smallBoldLabel" text="Inserisci un numero maggiore di 1 e premi il pulsante 'Calcola' per proseguire">
         <VBox.margin>
            <Insets left="5.0" top="10.0" />
         </VBox.margin>
      </Label>
      <HBox spacing="5.0">
         <children>
            <TextField fx:id="numeroInput" minWidth="260.0" />
            <Button fx:id="calcola" disable="true" mnemonicParsing="false" onAction="#actionCalcola" styleClass="confirmButton" text="Calcola" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <VBox fx:id="progress" alignment="TOP_CENTER" visible="false">
         <children>
            <Label fx:id="percentuale" text="Elaborazione in corso..." textFill="#a8a1a1">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <ProgressBar fx:id="barra" maxWidth="1.7976931348623157E308" progress="0.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ProgressBar>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </VBox>
      <Label fx:id="risultatoFattorizzazione" styleClass="smallBoldLabel" visible="false" />
      <Label fx:id="fattori" layoutX="15.0" layoutY="184.0" styleClass="smallBoldLabel" visible="false" />
      <TableView fx:id="tabella" maxHeight="300.0" visible="false">
        <columns>
          <TableColumn fx:id="numero" prefWidth="150.0" text="Numero" />
          <TableColumn fx:id="divisorePrimo" prefWidth="150.0" text="Divisore Primo" />
            <TableColumn fx:id="potenzaDivisore" prefWidth="150.0" text="Potenza Divisore" />
            <TableColumn fx:id="risultato" prefWidth="150.0" text="Risultato" />
            <TableColumn fx:id="tempiDiCalcolo" prefWidth="150.0" text="Tempi di Calcolo" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
